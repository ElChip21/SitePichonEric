                <td>{{ temoignage.contenu }}</td>
                <td>{{ temoignage.date ? temoignage.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_temoignage_show', {'id': temoignage.id}) }}">show</a>
                    <a href="{{ path('app_temoignage_edit', {'id': temoignage.id}) }}">edit</a>
